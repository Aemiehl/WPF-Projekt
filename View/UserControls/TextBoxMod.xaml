<UserControl x:Class="WPF_Projekt.View.UserControls.TextBoxMod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Projekt.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="800">
    
    <Grid Margin="20,10,20,10" 
      Background="White">
        <TextBlock x:Name="Description" 
                   Text="{Binding DescriptionText}" 
                   FontWeight="Medium"
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left"
                   FontSize="18" 
                   Foreground="Black"/>
        <TextBox x:Name="txtInput"
                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                 Height="30" 
                 Background="Transparent"
                 FontSize="18"
                 FontWeight="Light"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Stretch" 
                 Foreground="Black"
                 Margin="0,0,0,0"
                 TextChanged="txtInput_TextChanged"/>
        <Button Content="X"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Height="30"
                Width="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="WhiteSmoke"
                Click="Button_Click_Remove_Text"
                BorderBrush="Black"
                BorderThickness="1"/>
        <TextBlock x:Name="Placeholder" 
                   Text="{Binding PlaceholderText}" 
                   Height="30"
                   FontWeight="Light"
                   FontSize="18" 
                   VerticalAlignment="Bottom" 
                   HorizontalAlignment="Stretch"
                   Foreground="DarkGray"
                   Padding="3,1,0,0" 
                   Margin="0,0,0,0"
                   Panel.ZIndex="-1"/>
    </Grid>
</UserControl>
