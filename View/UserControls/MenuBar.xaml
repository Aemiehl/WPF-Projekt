<UserControl x:Class="WPF_Projekt.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Projekt.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Templates/TaskBarButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Height="35" x:Name="HeaderGrid">
        <!--Menu Items-->
        <Menu Margin="100,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" BorderThickness="0,0,0,2" BorderBrush="#06402B">
            <MenuItem Header="File" Background="Transparent" FontSize="14" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3,2,3,2" BorderThickness="1" BorderBrush="Black">
                <MenuItem Header="Add" Command="{Binding OpenAddWindowCommand}"/>
                <MenuItem Header="Remove"/>
                <MenuItem Header="Settings"/>
            </MenuItem>
            <MenuItem Header="Edit" Background="Transparent" FontSize="14" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3,2,3,2" BorderThickness="1" BorderBrush="Black">
                <MenuItem Header="Darkmode" x:Name="CheckBox_Darkmode" IsCheckable="True" IsChecked="{Binding IsDarkModeChecked}" Command="{Binding ToggleDarkmodeCommand}"/>
            </MenuItem>
        </Menu>
    </Grid>
    
</UserControl>

    